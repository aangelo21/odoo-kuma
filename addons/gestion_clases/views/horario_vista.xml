<odoo>
    <data>
        <record model="ir.ui.view" id="gestion_clases.horario_form">
            <field name="name">gestion_clases.horario.form</field>
            <field name="model">gestion_clases.horario</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <separator string="Datos generales" />
                        <group>
                            <field name="curso_id" />
                            <field name="aula_id" />
                            <field name="es_plantilla" invisible="1" />
                        </group>
                        <separator string="Temario" invisible="es_plantilla"/>
                        <field name="temario" 
                               placeholder="Escriba aquí el contenido impartido en la clase..." 
                               invisible="es_plantilla"/>
                        <separator string="Horarios por día" invisible="not es_plantilla"/>
                        <group invisible="not es_plantilla">
                            <group string="Lunes">
                                <field name="lunes" />
                                <group invisible="not lunes">
                                    <field name="lunes_hora_inicio" widget="float_time" />
                                    <field name="lunes_hora_fin" widget="float_time" />
                                </group>
                            </group>
                            <group string="Martes">
                                <field name="martes" />
                                <group invisible="not martes">
                                    <field name="martes_hora_inicio" widget="float_time" />
                                    <field name="martes_hora_fin" widget="float_time" />
                                </group>
                            </group>
                            <group string="Miércoles">
                                <field name="miercoles" />
                                <group invisible="not miercoles">
                                    <field name="miercoles_hora_inicio" widget="float_time" />
                                    <field name="miercoles_hora_fin" widget="float_time" />
                                </group>
                            </group>
                            <group string="Jueves">
                                <field name="jueves" />
                                <group invisible="not jueves">
                                    <field name="jueves_hora_inicio" widget="float_time" />
                                    <field name="jueves_hora_fin" widget="float_time" />
                                </group>
                            </group>
                            <group string="Viernes">
                                <field name="viernes" />
                                <group invisible="not viernes">
                                    <field name="viernes_hora_inicio" widget="float_time" />
                                    <field name="viernes_hora_fin" widget="float_time" />
                                </group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="gestion_clases.horario_list">
            <field name="name">gestion_clases.horario.list</field>
            <field name="model">gestion_clases.horario</field>
            <field name="arch" type="xml">
                <list>
                    <field name="curso_id"/>
                    <field name="aula_id"/>
                    <field name="lunes"/>
                    <field name="martes"/>
                    <field name="miercoles"/>
                    <field name="jueves"/>
                    <field name="viernes"/>
                </list>
            </field>
        </record>

        <record model="ir.ui.view" id="gestion_clases.horario_search">
            <field name="name">gestion_clases.horario.search</field>
            <field name="model">gestion_clases.horario</field>
            <field name="arch" type="xml">
                <search>
                    <field name="curso_id" />
                    <field name="aula_id" />
                    <filter string="Lunes" name="lunes" domain="[('lunes', '=', True)]" />
                    <filter string="Martes" name="martes" domain="[('martes', '=', True)]" />
                    <filter string="Miércoles" name="miercoles" domain="[('miercoles', '=', True)]" />
                    <filter string="Jueves" name="jueves" domain="[('jueves', '=', True)]" />
                    <filter string="Viernes" name="viernes" domain="[('viernes', '=', True)]" />
                    <group expand="0" string="Group By">
                        <filter string="Curso" name="group_by_curso"
                            context="{'group_by': 'curso_id'}" />
                        <filter string="Aula" name="group_by_aula" context="{'group_by': 'aula_id'}" />
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="gestion_clases.horario_calendar">
            <field name="name">gestion_clases.horario.calendar</field>
            <field name="model">gestion_clases.horario</field>
            <field name="arch" type="xml">
                <calendar date_start="fecha" 
                 date_stop="fecha_fin" 
                 string="Horario de Clases"
                 mode="week" 
                 color="color_event" 
                 event_open_popup="true">
                    <field name="curso_id" />
                    <field name="aula_id" />
                </calendar>
            </field>
        </record>

        <record model="ir.actions.act_window" id="gestion_clases.action_window_horario">
            <field name="name">Horarios</field>
            <field name="res_model">gestion_clases.horario</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'default_es_plantilla': True}</field>
            <field name="domain">[('es_plantilla', '=', True)]</field>
        </record>

        <record model="ir.actions.act_window" id="gestion_clases.action_window_horario_calendar">
            <field name="name">Calendario de Horarios</field>
            <field name="res_model">gestion_clases.horario</field>
            <field name="view_mode">calendar</field>
            <field name="context">{'default_es_plantilla': False}</field>
            <field name="domain">[('es_plantilla', '=', False)]</field>
        </record>

        <record model="ir.ui.view" id="gestion_clases.horario_kanban">
            <field name="name">gestion_clases.horario.kanban</field>
            <field name="model">gestion_clases.horario</field>            <field name="arch" type="xml">                
                <kanban default_group_by="aula_id" class="o_kanban_small_column" 
                        on_create="false" records_draggable="1"
                        group_create="false" group_delete="false" quick_create="false">
                    <field name="curso_id"/>
                    <field name="aula_id"/>
                    <field name="fecha"/>
                    <field name="fecha_fin"/>
                    <field name="temario"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card">
                                <div class="oe_kanban_content p-2">
                                    <strong class="d-block mb-1">
                                        <field name="curso_id"/>
                                    </strong>
                                    <div class="text-muted mb-1">
                                        <i class="fa fa-clock-o"/> 
                                        <field name="fecha" widget="datetime"/> - <field name="fecha_fin" widget="datetime"/>
                                    </div>
                                    <div class="mt-2">
                                        <strong>Temario:</strong>
                                        <p class="text-muted"><field name="temario"/></p>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.actions.act_window" id="gestion_clases.action_window_horario_panel">            <field name="name">Panel de Aulas</field>
            <field name="res_model">gestion_clases.horario</field>
            <field name="view_mode">kanban</field>
            <field name="context">{'default_es_plantilla': False, 'group_by': 'aula_id', 'group_create': False, 'group_delete': False}</field>
            <field name="domain">[('es_plantilla', '=', False), ('temario', '!=', False), ('temario', '!=', '')]</field>
        </record>

        <menuitem name="Gestión Aulas" id="gestion_clases.menu_root" />
        <menuitem name="Calendario" id="gestion_clases.menu_3" 
            parent="gestion_clases.menu_root"
            action="gestion_clases.action_window_horario_calendar"
            sequence="1"/>
        <menuitem name="Panel de Aulas" id="gestion_clases.menu_4" 
            parent="gestion_clases.menu_root"
            action="gestion_clases.action_window_horario_panel"
            sequence="2"/>
        <menuitem name="Horarios" id="gestion_clases.menu_2" 
            parent="gestion_clases.menu_root"
            action="gestion_clases.action_window_horario"
            sequence="3"/>
    </data>
</odoo>