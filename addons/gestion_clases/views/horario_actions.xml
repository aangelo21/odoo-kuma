<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record model="ir.actions.act_window" id="gestion_clases.action_window_horario">
      <field name="name">Grupos presenciales</field>
      <field name="res_model">gestion_clases.horario</field>
      <field name="view_mode">list,form</field>
      <field name="context">{'default_es_plantilla': True}</field>
      <field name="domain">[('es_plantilla', '=', True)]</field>
    </record>
    
    <record model="ir.actions.act_window" id="gestion_clases.action_window_horario_panel">
      <field name="name">Grabación de clases</field>
      <field name="res_model">gestion_clases.horario</field>
      <field name="view_mode">kanban</field>
      <field name="view_id" ref="gestion_clases.horario_kanban" />
      <field name="context">{'default_es_plantilla': False, 'group_by': 'aula_id', 'group_create':
        False, 'group_delete': False, 'skip_overlap_validation': True}</field>
      <field name="domain">[('es_plantilla', '=', False), ('temario', '!=', False), ('temario',
        '!=', '')]</field>
    </record>

    <record model="ir.actions.act_window" id="gestion_clases.action_window_horario_diario">
      <field name="name">Calendario</field>
      <field name="res_model">gestion_clases.horario</field>
      <field name="view_mode">kanban,form</field>
      <field name="view_id" ref="gestion_clases.horario_kanban_diario" />
      <field name="context">{'default_es_plantilla': False, 'group_by': 'aula_display',
        'group_create': False, 'group_delete': False, 'search_default_today': 1}</field>
      <field name="domain">[('es_plantilla', '=', False)]</field>
      <field name="search_view_id" ref="gestion_clases.horario_search" />
    </record>
    <record model="ir.actions.act_window.view" id="action_horario_panel_kanban_view">
      <field name="sequence" eval="1" />
      <field name="view_mode">kanban</field>
      <field name="view_id" ref="gestion_clases.horario_kanban" />
      <field name="act_window_id" ref="gestion_clases.action_window_horario_panel" />
    </record>

    <record model="ir.actions.act_window.view" id="action_horario_diario_kanban_view">
      <field name="sequence" eval="1" />
      <field name="view_mode">kanban</field>
      <field name="view_id" ref="gestion_clases.horario_kanban_diario" />
      <field name="act_window_id" ref="gestion_clases.action_window_horario_diario" />
    </record>

    <record model="ir.actions.act_window.view" id="action_horario_diario_form_view">
      <field name="sequence" eval="2" />
      <field name="view_mode">form</field>
      <field name="view_id" ref="horario_form_kanban_edit" />
      <field name="act_window_id" ref="gestion_clases.action_window_horario_diario" />
    </record>

    <record id="gestion_clases.horario_search" model="ir.ui.view">
      <field name="name">gestion_clases.horario.search</field>
      <field name="model">gestion_clases.horario</field>
      <field name="arch" type="xml">
        <search>
          <filter string="Hoy" name="today"
            domain="[('fecha', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d')),
                          ('fecha', '&lt;', (datetime.datetime.now() + datetime.timedelta(days=1)).strftime('%Y-%m-%d'))]"
            help="Horarios de hoy" />
          <filter string="Mañana" name="tomorrow"
            domain="[('fecha', '&gt;=', (datetime.datetime.now() + datetime.timedelta(days=1)).strftime('%Y-%m-%d')),
                          ('fecha', '&lt;', (datetime.datetime.now() + datetime.timedelta(days=2)).strftime('%Y-%m-%d'))]"
            help="Horarios de mañana" />
          <filter string="Ayer" name="yesterday"
            domain="[('fecha', '&gt;=', (datetime.datetime.now() - datetime.timedelta(days=1)).strftime('%Y-%m-%d')),
                          ('fecha', '&lt;', datetime.datetime.now().strftime('%Y-%m-%d'))]"
            help="Horarios de ayer" />
          <separator />
          <field name="fecha" />
          <field name="aula_id" />
          <field name="temario" />
          <group expand="1" string="Agrupar por">
            <filter string="Aula" name="group_aula" context="{'group_by':'aula_id'}" />
            <filter string="Fecha" name="group_fecha" context="{'group_by':'fecha'}" />
          </group>
        </search>
      </field>
    </record>
  </data>
</odoo>