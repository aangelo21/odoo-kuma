<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record model="ir.ui.view" id="gestion_clases.horario_kanban_diario">
      <field name="name">gestion_clases.horario.kanban.diario</field>
      <field name="model">gestion_clases.horario</field>
      <field name="arch" type="xml">
        <kanban default_group_by="aula_display" class="o_kanban_small_column"
          on_create="false" records_draggable="0"
          group_create="false" group_delete="false" quick_create="false">
          <field name="curso_id" />
          <field name="aula_display" />
          <field name="fecha" />
          <field name="fecha_fin" />
          <field name="temario" />
          <templates>            <t t-name="kanban-box">
              <div
                t-attf-class="oe_kanban_card #{record.temario.raw_value ? 'bg-success' : 'bg-danger'}"
                style="border-radius: 8px;">
                <div class="oe_kanban_content p-3">
                  <strong class="d-block mb-2 text-white fs-5">
                    <field name="curso_id" />
                  </strong>                  <div class="text-light mb-2">
                    <div class="mb-1">
                      <i class="fa fa-calendar" /> 
                      <field name="fecha" widget="date" options="{'format': 'EEEE d'}" />
                    </div>
                    <div class="mb-1">
                      <i class="fa fa-clock-o" /> 
                      Hora de inicio: <field name="fecha" widget="datetime" options="{'format': 'HH:mm'}" />
                    </div>
                    <div class="mb-1">
                      <i class="fa fa-clock-o" /> 
                      Hora de fin: <field name="fecha_fin" widget="datetime" options="{'format': 'HH:mm'}" />
                    </div>
                  </div>
                  <div class="mt-2">
                    <strong class="text-white">Temario</strong>
                    <p class="text-light mb-0">
                      <field name="temario" />
                    </p>
                  </div>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>
  </data>
</odoo>