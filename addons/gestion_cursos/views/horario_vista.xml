<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="gestion_cursos.horario_list">
      <field name="name">gestion_cursos horario list</field>
      <field name="model">gestion_cursos.horario</field>
      <field name="arch" type="xml">
        <list>
          <field name="curso_id"/>
          <field name="aula_id"/>
          <field name="dia"/>
          <field name="hora_inicio" widget="float_time"/>
          <field name="hora_fin" widget="float_time"/>
        </list>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="gestion_cursos.action_window_horario">
      <field name="name">Horarios</field>
      <field name="res_model">gestion_cursos.horario</field>
      <field name="view_mode">list,form</field>
    </record>


