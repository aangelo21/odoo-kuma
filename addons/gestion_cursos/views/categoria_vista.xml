<odoo>
  <data>
    <record model="ir.ui.view" id="gestion_cursos.categoria_list">
      <field name="name">gestion_cursos categoria list</field>
      <field name="model">gestion_cursos.categoria</field>
      <field name="arch" type="xml">
        <list>
          <field name="nombre"/>
          <field name="color"/>
          <field name="id_curso"/>
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="gestion_cursos.categoria_form">
      <field name="name">gestion_cursos categoria form</field>
      <field name="model">gestion_cursos.categoria</field>
      <field name="arch" type="xml">
        <form>
          <separator string="Datos generales"/>
          <group>
            <field name="nombre"/>
            <field name="color"/>
          </group>
          <separator string="Cursos relacionados"/>
          <group>
            <field name="id_curso"/>
          </group>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="gestion_cursos.action_window_categoria">
      <field name="name">Categorías</field>
      <field name="res_model">gestion_cursos.categoria</field>
      <field name="view_mode">list,form</field>
    </record>

    <menuitem name="Gestión cursos" id="gestion_cursos.menu_root"/>

    <menuitem name="Categorías" id="gestion_cursos.menu_1" parent="gestion_cursos.menu_root"/>

    <menuitem name="Lista de categorías" id="gestion_cursos.menu_1_list" parent="gestion_cursos.menu_1"
              action="gestion_cursos.action_window_categoria"/>

  </data>
</odoo>
